<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github</groupId>
    <artifactId>marabou</artifactId>
    <description>Marabou is a cross-platform audio tagger using SWT 
	for the frontend and mp3agic as the backend library for mp3 file tagging.</description>
    <packaging>jar</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>marabou</name>
    <url>http://hennr.github.com/marabou/</url>
    <licenses>
	<license>
	    <name>GNU GPL v3 or higher</name>
	    <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
	</license>
    </licenses>

    <issueManagement>
	<system>github</system>
	<url>https://github.com/hennr/marabou/issues</url>
    </issueManagement>

    <scm>
	<connection>scm:git://github.com/hennr/marabou.git</connection>
	<url>https://github.com/hennr/marabou</url>
    </scm>
    
    <properties>
	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <developers>
	<developer>
	    <name>Jan-Hendrik "hennr" Peters</name>
	    <email>hennr@hennr.name</email>
	    <url>http://hennr.name</url>
	    <roles>
		<role>developer</role>
	    </roles>
	    <timezone>Europe/Berlin</timezone>
	</developer>
	<developer>
	    <name>Markus Herpich</name>
	    <email>herpich@cs.tu-berlin.de</email>
	    <roles>
		<role>developer</role>
	    </roles>
	    <timezone>Europe/Berlin</timezone>
	</developer>
    </developers>

    <dependencies>
	<dependency>
	    <groupId>junit</groupId>
	    <artifactId>junit</artifactId>
	    <version>4.8.2</version>
	</dependency>

	<!-- gettext for internationalisation -->
	<dependency>
	    <groupId>org.xnap.commons</groupId>
	    <artifactId>gettext-commons</artifactId>
	    <version>0.9.6</version>
	</dependency>
				
	<!-- our mp3 tag lib -->
	<dependency>
	    <groupId>com.mpatric.mp3agic</groupId>
	    <artifactId>mp3agic</artifactId>
	    <version>0.8-SNAPSHOT</version>
	    <scope>system</scope>
	    <systemPath>${basedir}/lib/mp3agic-0.8-SNAPSHOT.jar</systemPath>
	</dependency>
		
	<!-- TODO delete this lib!!!
	Our backend lib jaudiotagger -->
	<dependency>
	    <groupId>org</groupId>
	    <artifactId>jaudiotagger</artifactId>
	    <version>2.0.3</version>
	</dependency>
	<!-- SWT from https://code.google.com/p/swt-repo/ -->
	<dependency>
	    <groupId>org.eclipse.swt</groupId>
	    <artifactId>${swt.artifactId}</artifactId>
	    <version>3.7.2</version>
        </dependency>
	<dependency>
	    <groupId>org.hsqldb</groupId>
	    <artifactId>hsqldb</artifactId>
	    <version>2.0.0</version>
	</dependency>
	<dependency>
	    <groupId>log4j</groupId>
	    <artifactId>log4j</artifactId>
	    <version>1.2.16</version>
	    <type>jar</type>
	    <scope>compile</scope>
	    <exclusions>
		<exclusion>
		    <groupId>com.sun.jmx</groupId>
		    <artifactId>jmxri</artifactId>
		</exclusion>
		<exclusion>
		    <groupId>com.sun.jdmk</groupId>
		    <artifactId>jmxtools</artifactId>
		</exclusion>
		<exclusion>
		    <groupId>javax.jms</groupId>
		    <artifactId>jms</artifactId>
		</exclusion>
	    </exclusions>
	</dependency>

    </dependencies>

    <build>
	<plugins>
	    <!--
	    This is a maven plugin to create message templates and classes from
	    the po files for the internationalisation
	    -->
	    <plugin>
		<groupId>org.xnap.commons</groupId>
		<artifactId>maven-gettext-plugin</artifactId>
		<version>1.1</version>
		<configuration>
		    <poDirectory>${basedir}/resources/i18n</poDirectory>
		    <targetBundle>i18n.Messages</targetBundle>
		    <keywords>-k_</keywords>
		</configuration>
	    </plugin>
	    <!-- assembles one single runnable jar -->
	    <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-assembly-plugin</artifactId>
		<version>2.4</version>
		<configuration>
		    <descriptorRefs>
			<descriptorRef>jar-with-dependencies</descriptorRef>
		    </descriptorRefs>
		    <archive>
			<manifest>
			    <mainClass>net.launchpad.marabou.Main</mainClass>
			</manifest>
		    </archive>
		</configuration>
		<executions>
		    <execution>
			<phase>install</phase>
			<goals>
			    <goal>single</goal>
			</goals>
		    </execution>
		    <execution>
			<id>pkg</id>
			<phase>package</phase>
			<goals>
			    <goal>single</goal>
			</goals>
		    </execution>
		</executions>
	    </plugin>
	    <plugin>
		<artifactId>maven-compiler-plugin</artifactId>
		<version>3.1</version>
		<configuration>
		    <source>1.7</source>
		    <target>1.7</target>
		</configuration>
	    </plugin>
	    
	</plugins>
    </build>
	
    <profiles>
	<profile>
	    <id>gtk_linux_x86</id>
	    <activation>
		<os>
		    <name>linux</name>
		    <arch>x86</arch>
		</os>
	    </activation>
	    <properties>
		<swt.artifactId>org.eclipse.swt.gtk.linux.x86</swt.artifactId>
	    </properties>
	</profile>
	<profile>
	    <id>gtk_linux_i386</id>
	    <activation>
		<os>
		    <name>linux</name>
		    <arch>i386</arch>
		</os>
	    </activation>
	    <properties>
		<swt.artifactId>org.eclipse.swt.gtk.linux.x86</swt.artifactId>
	    </properties>
	</profile>
	<profile>
	    <id>gtk_linux_x86_64</id>
	    <activation>
		<os>
		    <name>linux</name>
		    <arch>x86_64</arch>
		</os>
	    </activation>
	    <properties>
		<swt.artifactId>org.eclipse.swt.gtk.linux.x86_64</swt.artifactId>
	    </properties>
	</profile>
		<profile>
	    <id>gtk_linux_amd64</id>
	    <activation>
		<os>
		    <name>linux</name>
		    <arch>amd64</arch>
		</os>
	    </activation>
	    <properties>
		<swt.artifactId>org.eclipse.swt.gtk.linux.x86_64</swt.artifactId>
	    </properties>
	</profile>
	<profile>
	    <id>windows32</id>
	    <activation>
		<os>
		    <family>windows</family>
		    <arch>amd64</arch>
		</os>
	    </activation>
	    <properties>
		<swt.artifactId>org.eclipse.swt.win32.win32.x86</swt.artifactId>
	    </properties>
	</profile>
	<profile>
	    <id>windows64</id>
	    <activation>
		<os>
		    <family>windows</family>
		    <arch>x86_64</arch>
		</os>
	    </activation>
	    <properties>
		<swt.artifactId>org.eclipse.swt.win32.win32.x86_64</swt.artifactId>
	    </properties>
	</profile>
    </profiles>
	
    <repositories>
	<!-- for internationalisation -->
	<repository>
	    <id>gettext-commons-site</id>
	    <url>http://gettext-commons.googlecode.com/svn/maven-repository/</url>
	</repository>
		
	<!-- TODO delete this repo!!!
	jaudiotagger repo -->
	<repository>
	    <id>jaudiotagger-repo</id>
	    <url>http://download.java.net/maven/2/</url>
	</repository>
	<repository>
	    <id>swt-repo</id>
	    <url>https://swt-repo.googlecode.com/svn/repo/</url>
	</repository>
    </repositories>
	
    <pluginRepositories>
	<!-- for the gettext-maven-plugin -->
	<pluginRepository>
	    <id>xnap-commons</id>
	    <name>XNap Commons Repository</name>
	    <url>http://xnap-commons.sourceforge.net/repository/</url>
	</pluginRepository>
    </pluginRepositories>

</project>
